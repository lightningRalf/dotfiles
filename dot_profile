# ~/.profile
# Executed by the command interpreter for login shells

# Set PATH so it includes user's private bin directories
export PATH="$HOME/bin:$HOME/.local/bin:$PATH"

# Load bashrc.d environment file
if [ -f "$HOME/.bashrc.d/00-env.bash" ]; then
  . "$HOME/.bashrc.d/00-env.bash"
fi

# Load uv environment (persistent)
if [[ -f "$HOME/.local/uv-env" ]]; then
  . "$HOME/.local/uv-env"
fi

# Apply no-systemd guard for WSL login shells
if [ -f "$HOME/.local/no-systemd.sh" ]; then
  . "$HOME/.local/no-systemd.sh"
fi
