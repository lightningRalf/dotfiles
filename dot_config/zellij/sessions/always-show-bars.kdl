// Zellij session configuration with always visible bars
session {
    name "always-show-bars"
    // Ensure status bar and tab bar are always visible
    status_bar true
    tab_bar true
    // Use the same theme as your current config
    theme "github_light_inspired_zellij"
    // Keep pane frames visible
    pane_frames true
    // Auto-layout enabled
    auto_layout true
    // Default layout
    default_layout "/home/lightningralf/programming/orgmem2/tmp/basic.kdl"
}